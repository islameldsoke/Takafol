<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="#fff"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="40dp"
        android:paddingLeft="10dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/frankenstein"
            android:scaleType="fitCenter"
            android:id="@+id/notificationprofilePic"

            />
        <TextView
            android:id="@+id/notificationUSERname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abo Trika"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:textColor="#2d2d2d"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginStart="5dp"
            />


    </LinearLayout>


    <TextView

        android:id="@+id/whonotifiy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Hello to Takafol Hello to Takafol Hello to Takafol Hello to Takafol Hello to Takafol Hello to Takafol Hello to Takafol"
        android:textColor="#8e8686"
        android:textSize="20dp" />

    <View
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#e1e1e1" />






</LinearLayout>