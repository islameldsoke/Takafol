<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- MaterialDrawer specific values -->
        <item name="material_drawer_background">@color/greyColor</item>
        <item name="material_drawer_primary_text">@color/colorPrimary</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/colorPrimary</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/blackColor</item>
        <item name="material_drawer_selected">@color/colorPrimary</item>
        <item name="material_drawer_selected_text">@color/accent</item>
        <item name="material_drawer_header_selection_text">@color/accent</item>


    </style>


    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/colorAccent</item>

        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/voice_icon</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/close_icon</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/back_icon</item>

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">#000</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">#000</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_hint</item>

 </style>


</resources>
